<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:id="@+id/histCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <TextView
                android:id="@+id/tripname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginLeft="0dp"
                android:layout_weight="2"
                android:text="Name"
                android:textSize="19sp"
                tools:text="name" />
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="19sp"
                android:text="Status" />
        </LinearLayout>
        <ImageView
            android:id="@+id/tripimg"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_margin="1dp"
            android:background="@drawable/nopreview"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/extrahist"
            android:visibility="gone">

            <!-- TODO: Update blank fragment layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5.5">

                <TextView
                    android:id="@+id/tripstarttime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1.5"
                    android:textSize="19sp"
                    android:text="start time" />

                <TextView
                    android:id="@+id/cfreps"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1.5"
                    android:textSize="19sp"
                    android:text="repition" />
                <TextView
                    android:id="@+id/cfdistvel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="2.5"
                    android:textSize="19sp"
                    android:text="disthsdjkhasjkdas" />
            </LinearLayout>
            <TextView
                android:id="@+id/cftripstartpoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="19sp"
                android:text="startpoint" />

            <TextView
                android:id="@+id/cftripendpoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textSize="19sp"
                android:text="endpoint" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="5">
                <Button
                    android:id="@+id/shownoteshist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundedbutton"
                    android:layout_margin="5dp"
                    android:text="Show notes"/>
            </LinearLayout>
        </LinearLayout>
